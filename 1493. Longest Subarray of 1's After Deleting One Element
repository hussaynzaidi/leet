int longestSubarray(int* nums, int numsSize) {
    int m = 0,c1=0,c2=0,x=0;
    for(int i = 0 ; i<numsSize ; i++)
    {
        if(nums[i]==1)
        {
            c1++;
        }
        else if(nums[i]==0)
        {   
            x++;
            if(m<c1+c2)
            {
                m = c1+c2;
            }
        
            c2=c1;
            c1=0;
        }
    }
    if(m<c1+c2)
        {
            m = c1+c2;
        }
    if(x==0)
    {
        return m-1;
    }
    return m;
}
